@font-face
  font-family: GoogleSans;
  src: url('../assets/font/GoogleSans-Bold.ttf');
  src: url('../assets/font/GoogleSans-BoldItalic.ttf');
  src: url('../assets/font/GoogleSans-Italic.ttf');
  src: url('../assets/font/GoogleSans-Medium.ttf');
  src: url('../assets/font/GoogleSans-MediumItalic.ttf');
  src: url('../assets/font/GoogleSans-Regular.ttf');

* 
  font-family GoogleSans

*::-webkit-scrollbar-track
	-webkit-box-shadow inset 0 0 10px rgba(0,0,0,0.1)
	border-radius 10px
	background-color rgba(0,0,0,0.1)

*::-webkit-scrollbar
	width 9px
	background-color #F5F5F5

*::-webkit-scrollbar-thumb
	border-radius 9px
	background-color #666

.bshadow
	box-shadow 0 0 4px rgba(80,80,80,.2) !important

.mxh-vh
	max-height 100vh !important

.fixed-position
	position fixed !important 
	top 0 !important
	left 0 !important

.icon-size-md
	font-size 24px !important

.br
	border 1px solid #000